{
    "name": "acf/zap-text-block",
    "title": "Zap Text Block",
    "description": "A custom zap-text-block block that uses ACF fields.",
    "style": [ "file:./zap-text-block.css" ],
    "category": "formatting",
    "icon": "editor-paragraph",
    "keywords": ["rabbittext", "quote"],
    "acf": {
        "mode": "preview",
        "renderTemplate": "zap-text-block.php"
    },
     "settings": {
        	"appearanceTools": true,
		"typography": {
			"fontWeight": "900",
           "fontFamily": "Montserrat, sans-serif"
		}
	},
     "attributes": {
        "style": {
            "type": "object",
            "default": {
                "spacing": {
                    "margin": {
                        "bottom": "0rem",
                        "top": "0rem"
                    },
                    "padding": "1rem"
                },
                "background": {
                    "backgroundImage": {
                        "url": "IMAGE_URL"
                    },
                    "backgroundPosition": "50% 50%",
                    "backgroundSize": "cover"
                }
            },
             "typography": {
            "fontSize": true,
            "lineHeight": true,
           	"fontWeight": "900",
           "fontFamily": "Montserrat, sans-serif",
            "textTransform": true,
            "textDecoration": true,
            "textAlign": true
        }
        },
        "backgroundColor": {
            "type": "string",
            "default": "var:preset|color|accent-5"
        },
        "textColor": {
            "type": "string",
            "default": "var:preset|color|contrast"
        }
    },
    "supports": {
        "anchor": true,
        "align": true,
        "html": true,
        "jsx": true,
        "typography": {
            "fontSize": true,
            "lineHeight": true,
           	"fontWeight": "900",
           "fontFamily": "Montserrat, sans-serif",
            "textTransform": true,
            "textDecoration": true,
            "textAlign": true
        },
        "mode": true,
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": "var:preset|spacing|50"
        },
        "color": {
            "background": true,
            "text": true
        }
    }
}
